#include "uart.h"

#define GPIOAEN		(1 << 0)		// GPIOA clock enable bit in AHB1ENR register

// Function to initialize UART2
void uart2_tx_init(void)
{
	/****** [1] Configure UART2 Pins on Port A, PA2 (Tx) and PA3 (Rx) ******/
	/*  Enable clock access to GPIOA on AHB1 bus  */
	RCC->AHB1ENR |= GPIOAEN;

	/*  Set PA2 mode to alternate function UART_TX (AF07) 0b10 in bit positions 5 and 4*/
	GPIOA->MODER |= (1 << 5);
	GPIOA->MODER &= ~(1 << 4);

	/*  Set PA3 mode to alternate function UART_RX (AF07)  */

	/****** [2] Configure UART  ******/
	/*  Enable clock access to UART2 on APB1*/
	/*  Configure baud rate  */
	/*  Configure data transfer direction  */
	/*  Enable UART module */


}


